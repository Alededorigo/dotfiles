# ~/.config/zathura/zathurarc

# Window
set window-title-home-tilde true
set statusbar-h-padding 50
set statusbar-v-padding 10
set page-padding 0 # This is the padding between pages. Set 0 to delete it.
set font Iosevka Medium Extended 14

# Status
set n-completion-items 10
set completion-bg           "#0e0e0e"
set completion-fg           "#e881a3"
set completion-group-bg     "#0e0e0e"
set completion-group-fg     "#ffffff"
set completion-highlight-bg "#e881a3"
set completion-highlight-fg "#0e0e0e"

# Noti
set notification-error-bg   "#ff5555"
set notification-error-fg   "#0e0e0e"
set notification-warning-bg "#0e0e0e"
set notification-warning-fg "#ff4545"
set notification-bg         "#0e0e0e"
set notification-fg         "#ffffff"

# Index
set index-bg                "#0e0e0e"
set index-fg                "#ffffff"
set index-active-bg         "#0e0e0e"
set index-active-fg         "#ffffff"

# Default
set default-fg              "#ffffff"
set default-bg              "#0e0e0e"

# Input & status
set inputbar-bg             "#0e0e0e"
set inputbar-fg             "#ffffff"
set statusbar-bg            "#0e0e0e"
set statusbar-fg            "#ffffff"
set statusbar-home-tilde true

# Render & highlight
set render-loading-bg       "#0e0e0e"
set render-loading-fg       "#ffffff"
set render-loading          true
set highlight-color         "#0e0e0e"
set highlight-active-color  "#e881a3"
set highlight-transparency  0.4

# Recolor PDF
set recolor true
set recolor-darkcolor       "#ffffff"
set recolor-lightcolor      "#0e0e0e"
