[colors]
bg = #171a1f
bg-alt = #31353b
fg = #fff
fg-alt = #555
yl = #F1FF52
rd = #EE4F84
or = #ffb86c
bl = #6498EF
az = #24D1E7
gr = #53E2AE
pr = #bd93f9

[bar/example]
width = 100%
height = 22

background = ${colors.bg}
foreground = ${colors.fg}

border-size = 4
border-color = ${colors.bg}

line-size = 2
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Fira Code Mono:size=10;2
font-1 = Material Design Icons:antialias=true:size=10;2

modules-left = i3 title
modules-right = alsa cpu memory battery date power

tray-position = center
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

;------ TITLE ------;
[module/title]
type = internal/xwindow

format = <label>
format-foreground = ${colors.fg}

;------ DATE ------;

[module/date]
type = internal/date
interval = 5

date = "%d  %m   %Y  "

time = "%H:%M"

format-padding = 2

format-prefix-foreground = ${colors.fg}
format-background = ${colors.bg-alt}

label = %time%


;------ BRIGHTNESS ------;

[module/backlight]
type = internal/backlight

card = acpi_video0

enable-scroll = true

format = <label>
label = %percentage%%
ramp-0 = 0
ramp-1 = 1
ramp-2 = 2
ramp-3 = 3
ramp-4 = 4
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─

;------ I3 ------;

[module/i3]
type = internal/i3
format-padding = 0
index-sort = true
wrapping-scroll = false

label-mode-foreground = #000
label-mode-background = ${colors.yl}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.pr}
label-focused-prefix = 
label-focused-background = ${colors.bg}
label-focused-underline= 
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.fg-alt}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.yl}
label-urgent-background = ${colors.bg-alt}
label-urgent-padding = 1

;------ CPU ------;

[module/cpu]
type = internal/cpu
interval = 2
format-padding = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.fg}
label = "%percentage:2%%"
format-background = ${colors.bg-alt}

;------ MEMORY ------;

[module/memory]
type = internal/memory
format-padding = 2
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.fg}
label = "%percentage_used%%"
format-background = ${colors.bg-alt}


;------ BATTERY ------;


[module/battery]
type = internal/battery

full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5

format-charging = <label-charging>
format-discharging = <label-discharging>

format-charging-padding = 2
format-discharging-padding = 2

format-charging-background = ${colors.bg-alt}
format-discharging-background = ${colors.bg-alt}

label-charging = CHA %percentage%%
label-discharging = DOW %percentage%%

label-full = FULL BAT

;------ VOLUME ------;

[module/alsa]
type = internal/alsa

label-muted = "VOL 0%"
label-muted-foreground = ${colors.pr}

label-volume = "%{F#f8f8f2}VOL %{F#f8f8f2}%percentage%%"

label-volume-padding = 2
label-muted-padding = 2

label-volume-background = ${colors.bg-alt}
label-muted-background = ${colors.bg-alt}

;------ POWER MENU ------;

[module/power]
type = custom/menu

format-foreground = ${colors.fg}
format-background = ${colors.bg-alt}
format-padding = 2

label-open = "P"
label-open-foreground = ${colors.pr}
label-close = "ESC  "
label-close-foreground = ${colors.pr}
label-separator = "    "
label-separator-foreground = ${colors.fg-alt}

; SUSPEND
menu-0-0 = "SOS"
menu-0-0-exec = "systemctl suspend"
menu-0-0-foreground = ${colors.fg}
; REBOOT
menu-0-1 = "REB"
menu-0-1-exec = "systemctl reboot"
menu-0-1-foreground = ${colors.fg}
; SHUTDOWN
menu-0-2 = "OFF"
menu-0-2-exec = "systemctl poweroff"
menu-0-2-foreground = ${colors.fg}


;------ REDSHIFT ------;

[module/redshift]
type = custom/script
format-prefix = 
format-prefix-foreground = ${colors.fg-alt}
format-padding = 0
exec = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh temperature 
click-left = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh toggle 
scroll-up = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh increase
scroll-down = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh decrease
interval=0.5

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5
