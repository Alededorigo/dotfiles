[colors]
bg = #282a36
bg-alt = #44475a
fg = #f8f8f2
fg-alt = #555
yl = #f1fa8c
rd = #ff5555
or = #ffb86c
bl = #6272a4
az = #8be9fd
gr = #50fa7b
pr = #bd93f9

[bar/example]
width = 100%
height = 25

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 2
line-color = #f00

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Fira Code:size=10;2
font-1 = FontAwesome5Free:style=Solid:size=10;2
font-2 = Font Awesome 5 Brans:pixelsize=10;2

modules-left = power title hl
modules-center =  
modules-right = redshift alsa cpu memory battery date

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

;------ TITLE ------;
[module/title]
type = internal/xwindow

format = <label>
format-foreground = ${colors.pr}

;------ DATE ------;

[module/date]
type = internal/date
interval = 5

date = "%d  %m   %Y  "

time = "%H:%M"

format-prefix-foreground = ${colors.fg}
format-underline = ${colors.pr}

label = %time%


;------ BRIGHTNESS ------;

[module/backlight]
type = internal/backlight

card = acpi_video0

enable-scroll = true

format = <label>
label = %percentage%%
ramp-0 = 0
ramp-1 = 1
ramp-2 = 2
ramp-3 = 3
ramp-4 = 4
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─

;------ I3 ------;

[module/i3]
type = internal/i3
format-padding = 0
index-sort = true
wrapping-scroll = false

label-mode-foreground = #000
label-mode-background = ${colors.yl}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.rd}
label-focused-prefix = 
label-focused-background = ${colors.bg}
label-focused-underline= 
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.fg-alt}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.yl}
label-urgent-background = ${colors.bg-alt}
label-urgent-padding = 1

;------ CPU ------;

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " CPU "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.az}
label = "%percentage:2%% "

;------ MEMORY ------;

[module/memory]
type = internal/memory
format-padding = 0
interval = 2 
format-prefix = "RAM "
format-prefix-foreground = ${colors.fg-alt}
format-underline = ${colors.pr}
label = "%percentage_used%%"

;------ BATTERY ------;


[module/battery]
type = internal/battery

full-at = 99

battery = BAT1
adapter = ACAD

poll-interval = 5

format-discharging-prefix = "BAT "
format-discharging-prefix-foreground = ${colors.fg-alt}
format-discharging-underline = ${colors.az}

time-format = %H:%M
label-discharging = "%percentage%%"
label-discharging-alt = %percentage%% (%time%)
format-discharging =  <label-discharging>

;------ VOLUME ------;

[module/alsa]
type = internal/alsa

label-muted = "VOL 0%"
label-muted-foreground = ${colors.pr}

label-volume = "%{F#555}VOL %{F#ECEFF4}%percentage%%"

label-volume-underline = ${colors.pr}
label-muted-underline = ${colors.pr}

;bar-volume-width = 10
;bar-volume-foreground-0 = #55aa55
;bar-volume-foreground-1 = #55aa55
;bar-volume-foreground-2 = #55aa55
;bar-volume-foreground-3 = #55aa55
;bar-volume-foreground-4 = #55aa55
;bar-volume-foreground-5 = #f5a70a
;bar-volume-foreground-6 = #ff5555
;bar-volume-gradient = false
;bar-volume-indicator = |
;bar-volume-indicator-font = 2
;bar-volume-fill = ─
;bar-volume-fill-font = 2
;bar-volume-empty = ─
;bar-volume-empty-font = 2
;bar-volume-empty-foreground = ${colors.fg-alt}


;------ POWER MENU ------;

[module/power]
type = custom/menu

format-foreground = ${colors.fg}
format-background = ${colors.bg}

label-open = "   "
label-open-foreground = ${colors.az}
label-close = "   cancel"
label-close-foreground = ${colors.az}
label-separator = " | "
label-separator-foreground = ${colors.fg-alt}

; SUSPEND
menu-0-0 = "suspend"
menu-0-0-exec = systemctl suspend
menu-0-0-foreground = ${colors.fg}
; REBOOT
menu-0-1 = "reboot"
menu-0-1-exec = systemctl reboot
menu-0-1-foreground = ${colors.fg}
; SHUTDOWN
menu-0-2 = "power off"
menu-0-2-exec = systemctl poweroff
menu-0-2-foreground = ${colors.fg}


;------ REDSHIFT ------;

[module/redshift]
type = custom/script
format-prefix = 
format-prefix-foreground = ${colors.fg-alt}
format-padding = 0
exec = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh temperature 
click-left = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh toggle 
scroll-up = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh increase
scroll-down = source ~/.config/polybar/scripts/env.sh && ~/.config/polybar/scripts/redshift.sh decrease
interval=0.5

[module/hl]
type = custom/script

exec-if = ps -C herbstluftwm >/dev/null 2>&1
exec = MONITOR=HDMI-0 ~/.config/polybar/herbstluftwm.sh
tail = true

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5
